<Application x:Class="GamesLibrary.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GamesLibrary"
             StartupUri="Views/GameSelectionWindow.xaml">
    <Application.Resources>
        <Style x:Key="WindowContainerStyle" TargetType="{x:Type FrameworkElement}">
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="CentralizedStackPanelStyle" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="Padding" Value="0, 5, 0, 1" />
        </Style>
    </Application.Resources>
</Application>
